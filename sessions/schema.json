{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Atlas Session Log",
  "type": "object",
  "properties": {
    "session_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "preset": { "type": "string" },
    "params": { "type": "object", "additionalProperties": true },
    "metrics": {
      "type": "object",
      "properties": {
        "R_total": { "type": "number" },
        "R_inner": { "type": "number" },
        "R_outer": { "type": "number" },
        "C_cross": { "type": "number" },
        "notes": { "type": "string" }
      },
      "required": ["R_total"]
    },
    "ethics": {
      "type": "object",
      "properties": {
        "consent_to_log": { "type": "boolean" },
        "offer_two_paths": { "type": "boolean" }
      },
      "required": ["consent_to_log", "offer_two_paths"]
    }
  },
  "required": ["session_id", "timestamp", "preset", "metrics", "ethics"]

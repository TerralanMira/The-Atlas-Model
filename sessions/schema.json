{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Atlas Session Summary",
  "type": "object",
  "properties": {
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "R_total_mean": { "type": "number" },
          "R_total_std":  { "type": "number" },
          "R_total_last": { "type": "number" },
          "cross_sync_mean": { "type": "number" },
          "drift_mean": { "type": "number" },
          "ready_mean": { "type": "number" }
        },
        "additionalProperties": true
      }
    },
    "suggestions": {
      "type": "object",
      "properties": {
        "suggest_pi_delta": { "type": "number" },
        "suggest_intraK_delta": { "type": "number" },
        "note": { "type": "string" }
      },
      "required": ["note"],
      "additionalProperties": false
    }
  },
  "required": ["runs"]
}

{
  "meta": {
    "version": "1.0.0",
    "engine": "kuramoto|breath", 
    "defaults": {
      "engine": "kuramoto",
      "steps": 4000,
      "dt": 0.01,
      "period": 20.0,
      "inhale_ratio": 0.5,
      "seed": 0,
      "noise_std": 0.0,
      "output_csv": "logs/run.csv",
      "offer_two_paths": true,
      "consent_to_log": true,
      "metrics": ["R_total", "cross_sync", "drift", "C", "Delta", "Phi", "ready", "choice_score"]
    }
  },

  "presets": {
    "default": {
      "description": "Baseline Kuramoto with moderate coupling; Gaussian ω.",
      "engine": "kuramoto",
      "num_oscillators": 100,
      "geometry": { "name": "grid", "rows": 10, "cols": 10, "diagonal": false },
      "coupling_strength": 0.5,
      "omega": { "distribution": "gaussian", "mean": 0.0, "std": 0.1 },
      "noise_std": 0.01,
      "steps": 4000,
      "dt": 0.01,
      "seed": 1,
      "output_csv": "logs/default.csv"
    },

    "flower_of_life": {
      "description": "Oscillators placed on a 3-ring Flower-of-Life lattice; coherence tracked by rings and spokes.",
      "engine": "kuramoto",
      "geometry": { "name": "flower_of_life", "rings": 3 }, 
      "num_oscillators": 91,
      "coupling_strength": 0.6,
      "omega": { "distribution": "harmonic_scale", "scale": [1, 2, 3, 5, 8] },
      "noise_std": 0.005,
      "steps": 6000,
      "dt": 0.01,
      "seed": 13,
      "output_csv": "logs/flower_of_life.csv"
    },

    "ouroboros_loop": {
      "description": "Closed ring with feedback; self-reference nudges local phases toward loop average.",
      "engine": "kuramoto",
      "geometry": { "name": "circular", "nodes": 64 },
      "num_oscillators": 64,
      "coupling_strength": 0.7,
      "feedback": { "type": "ouroboros", "gain": 0.15 },
      "omega": { "distribution": "spiral_mapping", "turns": 2.0, "std": 0.05 },
      "noise_std": 0.002,
      "steps": 5000,
      "dt": 0.01,
      "seed": 21,
      "output_csv": "logs/ouroboros.csv"
    },

    "conscious_choice": {
      "description": "Two populations: A (aligned), B (dissonant). Blend via choice ∈ [0,1].",
      "engine": "kuramoto",
      "groups": [
        { "name": "A", "size": 64, "coupling_strength": 0.8, "omega": { "distribution": "gaussian", "mean": 0.0, "std": 0.05 } },
        { "name": "B", "size": 64, "coupling_strength": 0.4, "omega": { "distribution": "gaussian", "mean": 0.1, "std": 0.10 } }
      ],
      "choice_parameter": 0.5,
      "mixing": { "type": "bipartite_edges", "prob": 0.2 },
      "noise_std": 0.01,
      "geometry": { "name": "grid", "rows": 16, "cols": 8, "diagonal": false },
      "steps": 6000,
      "dt": 0.01,
      "seed": 34,
      "output_csv": "logs/conscious_choice.csv"
    },

    "multi_scale_field": {
      "description": "Nested layers (Individual→Relational→Collective→Cosmic) with increasing N and K.",
      "engine": "kuramoto",
      "layers": [
        { "name": "individual", "size": 30,  "K": 0.30, "omega": { "distribution": "gaussian", "std": 0.12 } },
        { "name": "relational", "size": 60, "K": 0.50, "omega": { "distribution": "gaussian", "std": 0.10 } },
        { "name": "collective", "size": 120, "K": 0.70, "omega": { "distribution": "gaussian", "std": 0.08 } },
        { "name": "cosmic", "size": 240,     "K": 0.90, "omega": { "distribution": "gaussian", "std": 0.06 } }
      ],
      "interlayer_coupling": { "type": "radial", "strength": 0.2 },
      "geometry": { "name": "nested_spheres" },
      "noise_std": 0.003,
      "steps": 4000,
      "dt": 0.01,
      "seed": 55,
      "output_csv": "logs/multi_scale_field.csv"
    },

    "breath_flower": {
      "description": "Flower-of-Life lattice modulated by breath (K,π cycle); logs ready/choice per step.",
      "engine": "breath",
      "geometry": { "name": "flower_of_life", "rings": 3 },
      "num_oscillators": 91,
      "omega": { "distribution": "gaussian", "mean": 0.0, "std": 0.08 },
      "noise_std": 0.002,
      "period": 20.0,
      "inhale_ratio": 0.5,
      "steps": 6000,
      "dt": 0.01,
      "seed": 8,
      "offer_two_paths": true,
      "consent_to_log": true,
      "output_csv": "logs/breath_flower.csv"
    }
  }
}
